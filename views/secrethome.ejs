  <main>
    <% blogss.forEach(function(blog){ %>
      <section class="container" >
          <div class="site-content" style="grid-template-columns: 100% 0%;">
              
              <div class="posts">
                  <div class="post-content" data-aos="zoom-in" data-aos-delay="200">
                    <div class="post-title" style="text-align: center;padding-bottom: 0px;">
                    <div class="box" >
                      <a href="#" id="title"><i class="fab fa-battle-net" style="color:#178D27 ;"></i> <%= blog.title %></a></div>
                    </div>
                      <div class="post-image">
                          <div>
                            <% if(blog.image!=null){ %>
                            <img src="/uploads/<%= blog.image %>" class="img" alt="blog1">
                            <%  } %>
                          </div>
                          <div class="post-info flex-row">
                              <span><i class="fas fa-user text-gray"></i>&nbsp;&nbsp;<%= blog.user %></span>
                              <span><i class="fas fa-calendar-alt text-gray"></i>&nbsp;&nbsp;<%= blog.created %></span>
                          </div>
                      </div>
                      <div class="post-title" style="text-align: center;padding-bottom: 0px;">
                        
                        <div class="message-body" style="border-color: #296713;background-color: #DDDFE1;border-radius: 5%;">
                            <p id="content"><i class="fas fa-book-reader" style="color:#296713 ;"></i> <%= blog.content %>
                            </div>
                          
                          </p>
                         
                      </div>
                  </div>
                <br>
                  
      </section>
      
    <% }) %>
  
  </main>
  
  
